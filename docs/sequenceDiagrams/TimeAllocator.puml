participant "allocator:timeAllocator" as timeAllocator
participant "dayLog:Log" as log
participant "bestLog:Log" as Log
participant "currSlot:TimeSlot" as TimeSlot

->timeAllocator++: runAllocate()
timeAllocator->log**
activate log
